<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Test_maui_connection.Controls"
             xmlns:data="clr-namespace:Test_maui_connection.TestData"
             x:Class="Test_maui_connection.IndicesPage"
             Title="Indices">
    <Shell.SearchHandler>
        <controls:SymbolSearchHandler Placeholder="Enter search term"></controls:SymbolSearchHandler>
    </Shell.SearchHandler>
    <VerticalStackLayout>
    <CollectionView Margin="10"
                ItemsSource="{x:Static data:Symbols.MarketSymbols}"
                ItemTemplate="{StaticResource MarketSymbolTemplate}"
                SelectionMode="Single"
                SelectionChanged="OnCollectionViewSelectionChanged"/>
    </VerticalStackLayout>
</ContentPage>