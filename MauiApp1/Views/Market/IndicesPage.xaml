<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:include="clr-namespace:MauiApp1.Views.Include"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             x:Class="MauiApp1.Views.Market.IndicesPage">
    <Shell.SearchHandler>
        <controls:MarketSearchHandler ItemTemplate="{StaticResource MarketSearchTemplate}"  ListMainModels="{Binding Lists}" Placeholder="Please Enter term" />
    </Shell.SearchHandler>
    <ScrollView Padding="10">
        <CollectionView 
            Style="{StaticResource CollectionViewStyle}"
            ItemsSource="{Binding Lists}"
            SelectionMode="Single"
            SelectionChanged="OnHandleMoveDetailPage">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                         Span="1"
                         VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <include:MarketSymbolQuoteView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>